<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="1" android:versionName="1.0" package="Lock.Sample">
	<uses-sdk />
		<application android:label="Lock.Sample">
		<uses-permission android:name="android.permission.INTERNET"/>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
		  android:name="com.auth0.lock.LockActivity"
		  android:theme="@style/Lock.Theme"
		  android:screenOrientation="portrait"
		  android:launchMode="singleTask">
			<intent-filter>
			<action android:name="android.intent.action.VIEW"/>
				<category android:name="android.intent.category.DEFAULT"/>
		    	<category android:name="android.intent.category.BROWSABLE"/>
		    <data android:scheme="@string/auth0_scheme" android:host="@string/auth0_callback_domain"/>
			</intent-filter>
		</activity>
		<meta-data android:name="com.auth0.lock.client-id" android:value="@string/auth0_client_id"/>
		<meta-data android:name="com.auth0.lock.tenant" android:value="@string/auth0_tenant_name"/>

	</application>
</manifest>